extends layout

block content
  h1 Welcome to #{title}
  form(action="/url")
    input(type="submit" value="Generate new short URL")
  h1 Your URLs
    ul
      each url, index in db
        li #{url.longUrl} ⟶ #{index}
        a(href=`//${url.longUrl}`) Visit URL
    ul
      each url in urls
        li #{url.longUrl} ⟶ #{url.shortUrl}
        a(href=`//${url.longUrl}`) Visit URL

